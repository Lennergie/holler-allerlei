---
// CardGrid.astro
export interface Props {
    id?: string,
    items: {
        image: {
            url: string;
            alt?: string;
        };
        headline: string;
        text: string;
    }[];
}

const { items, id } = Astro.props;
---

<section class="mainWrapper flex gap-5 flex-col lg:flex-row contentReveal" id={ id ? id : '' }>
        {items.slice(0, 6).map((item, index) => (
                <div class="flex flex-col rounded-lg overflow-hidden shadow group w-full"
                     key={index}
                     class:list={['flex', { 'lg:w-1/2': items.length === 2 }, { 'lg:w-1/3': items.length > 2 }]}>
                    <img
                            src={item.image.url}
                            alt={item.image.alt || ''}
                            class="w-full h-64 object-cover transition-transform duration-300 scale-105 group-hover:scale-108"
                    />
                    <div class="p-6 bg-white flex flex-col gap-2 min-h-[180px]">
                        <h3 class="text-2xl font-semibold">{item.headline}</h3>
                        <p class="text-base" set:html={item.text}></p>
                    </div>
                </div>
        ))}
</section>
