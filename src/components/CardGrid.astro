---
// CardGrid.astro
export interface Props {
    items: {
        image: {
            url: string;
            alt?: string;
        };
        headline: string;
        text: string;
    }[];
}

const { items } = Astro.props;
---

<section class="mainWrapper flex gap-5 flex-col lg:flex-row">
        {items.slice(0, 6).map((item, index) => (
                <div class="flex flex-col rounded overflow-hidden shadow group" key={index}>
                    <img
                            src={item.image.url}
                            alt={item.image.alt || ''}
                            class="w-full h-64 object-cover transition-transform duration-300 scale-105 group-hover:scale-108"
                    />
                    <div class="p-6 bg-white flex flex-col gap-2 h-full">
                        <h3 class="text-2xl font-semibold">{item.headline}</h3>
                        <p class="text-gray-700 text-base">{item.text}</p>
                    </div>
                </div>
        ))}
</section>
