---
import TheHeader from "../components/TheHeader.vue";
import "./../styles/global.css";
import ParticleBg from "@/components/ParticleBg.vue";
import Footer from "../components/Footer.astro";
---

<script>
  import { initSmoothScrolling } from "../scripts/smoothscroll";
  import { animateContents } from "../scripts/globalReveal";
  import gsap from "gsap";

  initSmoothScrolling();

  const animateLoader = () => {
    gsap.to(".loading", {
      duration: 0.8,
      delay: 1,
      ease: "power3.inOut",
      top: "100%",
    });
  };

  window.addEventListener("DOMContentLoaded", () => {
    animateContents();
    animateLoader();
  });
</script>

<html lang="de">
  <head>
    <title>Holler Allerlei</title>
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
  </head>
  <body>
    <ParticleBg client:only="vue" style="z-index: 0; position: fixed;"/>
    <TheHeader client:load />
    <div style="z-index: 1; position: relative;">
      <slot />
    </div>
    <Footer style="z-index: 1; position: relative;" />
    <div class="loading">
      <img src="/Logo_black.png" alt="Holler Allerlei" class="w-[400px] max-w-3/4" />
    </div>
  </body>
</html>

<style>

  .loading {
    width: 100%;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    background: var(--mainBg);
    z-index: 1000;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .loading img {
    opacity: 0;
    animation-name: fadeIn;
    animation-duration: 0.3s;
    animation-delay: 0.3s;
    animation-fill-mode: forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
